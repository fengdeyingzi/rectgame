{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Edge",
            "port": 9222,
            "request": "attach",
            "type": "pwa-msedge",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "Egret",
            "request": "launch",
            "name": "Egret WebpackDevServer Debugger",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "egret: build"
        },
        {
            "type": "Egret",
            "request": "launch",
            "name": "Egret Debugger",
            "url": "http://localhost:${command:WebsitePort}",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "userDataDir": "${tmpdir}"
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Egret Debug(pwa-chrome)",
            "url": "http://127.0.0.1:7000/index.html",
            "webRoot": "${workspaceFolder}",
        }
    ]
}